size(width = 30, height = 30)
    width width px
    height height px

.icons-home
    text-align center
    a
        display inline-block
        padding rem(10px)
        margin rem(2px)
        border-radius 20%
        border rem(2px) solid sec
        line-height 0
        transition all .7s
        .icon
            fill sec
            size(18,18)
            +above(cut)
                size()
        &:hover
            background sec
            .icon
                fill main


.icons-home-about
    text-align right
    padding-right rem(10px)
    +below(cut)
        text-align center
    a
        display inline-block
        padding rem(10px)
        margin rem(2px)
        border-radius 20%
        border rem(2px) solid main
        line-height 0
        transition all .7s
        .icon
            fill skimblack
            size(18,18)
            +above(cut)
                size()
        &:hover
            background lightgray
            .icon
                fill main

